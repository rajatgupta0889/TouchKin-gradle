<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/parentNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_last_touch_text"
            android:textColor="@color/dashboardtextcolor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ParentLocTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text=""
            android:textColor="@color/text_grey"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/dashboardtextcolor"
            android:textSize="20sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="6dp"
            android:layout_height="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:background="@drawable/prev_dashboard_arrow"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="6dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:background="@drawable/next_dashboard_arrow" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" >

            <com.touchKin.touchkinapp.custom.RoundedImageView
                android:id="@+id/profile_pic"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_user_image" />

            <com.touchKin.touchkinapp.custom.HoloCircularProgressBar
                android:id="@+id/holoCircularProgressBar"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_centerInParent="true"
                app:stroke_width="10dp" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/parentBottonTouch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kins_last_touch_text"
            android:textColor="@color/dashboardtextcolor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/parentBottonTouch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text=""
            android:textColor="@color/text_grey"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/parentBottonTouch3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/dashboardtextcolor"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>