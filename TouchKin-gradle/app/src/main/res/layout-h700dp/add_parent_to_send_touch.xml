<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <com.touchKin.touchkinapp.custom.RoundedImageView
        android:id="@+id/parentImageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="3dp"
        android:padding="5dp"
        android:src="@drawable/ic_user_image" />

    <TextView
        android:id="@+id/parentNameTextView"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/parentImageView"
        android:layout_alignRight="@+id/checkBox"
        android:layout_below="@+id/parentImageView"
        android:layout_margin="3dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/text_orange"
        android:textSize="17sp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_above="@+id/parentNameTextView"
        android:layout_alignRight="@+id/parentImageView"
        android:background="@drawable/send_touch_checkbox"
        android:button="@null" />

</RelativeLayout>